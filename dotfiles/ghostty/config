# Font Configuration
font-family = "FiraCode Nerd Font"
font-size = 18

# Window Configuration
window-decoration = false
window-padding-x = 12
window-padding-y = 12
background-opacity = 1.0
background-blur-radius = 32

# Cursor Configuration
cursor-style = block
cursor-style-blink = true
adjust-cursor-thickness = 4

# Scrollback
scrollback-limit = 3023

# Terminal features
mouse-hide-while-typing = true
copy-on-select = false
confirm-close-surface = false

# Disable annoying copied to clipboard
app-notifications = no-clipboard-copy,no-config-reload

keybind = shift+ctrl+r=reload_config
keybind = alt+d=new_split:right
keybind = alt+shift+d=new_split:down
keybind = alt+[=goto_split:previous
keybind = alt+]=goto_split:next
keybind = alt+t=new_tab
keybind = ctrl+alt+w=close_tab

keybind = ctrl+shift+t=ignore
keybind = ctrl+shift+w=ignore
keybind = ctrl+shift+e=ignore
keybind = ctrl+shift+o=ignore
keybind = ctrl+super+[=ignore
keybind = ctrl+super+]=ignore
keybind = ctrl+enter=ignore

# copy
clipboard-read = allow
clipboard-write = allow

# Material 3 UI elements
unfocused-split-opacity = 0.7
unfocused-split-fill = #44464f

# Tab configuration
gtk-titlebar = false

# Shell integration
shell-integration = detect
shell-integration-features = cursor,sudo,title,no-cursor
keybind = shift+enter=text:\n

# Rando stuff
gtk-single-instance = true

# Dank color generation
config-file = ./config-dankcolors

custom-shader = shaders/cursor_smear.glsl
